# =============================================================================
# Shub — environment variables template
# Copy this file to .env and fill in your actual values.
# .env is gitignored and must never be committed.
# =============================================================================

# ---------------------------------------------------------------------------
# Frontend (Vite) — Supabase project connection
# Local Docker stack defaults shown. For hosted Supabase replace with your
# project URL (https://<ref>.supabase.co) and project anon key.
# ---------------------------------------------------------------------------
VITE_SUPABASE_URL=http://localhost:54321
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ---------------------------------------------------------------------------
# App metadata
# ---------------------------------------------------------------------------
VITE_APP_NAME=Shub
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development

# ---------------------------------------------------------------------------
# Feature flags
# ---------------------------------------------------------------------------
VITE_ENABLE_CONTENT_FILTERING=true
VITE_ENABLE_SAFE_BUDDY=true

# ---------------------------------------------------------------------------
# Database — used by the Supabase CLI (npm run db:push / db:psql / etc.)
# and by scripts/run-migrations.js.
#
# Local Docker stack:
#   DATABASE_URL=postgresql://supabase_admin:<postgres-password>@localhost:54322/postgres
#
# Hosted Supabase (find under Project Settings → Database → Connection string):
#   DATABASE_URL=postgresql://postgres:<password>@db.<ref>.supabase.co:5432/postgres
# ---------------------------------------------------------------------------
DATABASE_URL=postgresql://supabase_admin:your-postgres-password@localhost:54322/postgres

# Service-role key — admin access, never expose to the browser.
# Local: use the value from docker-compose.yml ANON_KEY / SERVICE_KEY.
# Hosted: Project Settings → API → service_role key.
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# JWT secret (must match GOTRUE_JWT_SECRET in docker-compose.yml or your
# hosted project's JWT secret under Project Settings → API).
SUPABASE_JWT_SECRET=your-jwt-secret-here
